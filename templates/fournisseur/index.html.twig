{% extends 'base.html.twig' %}

{% block title %}Fournisseur index{% endblock %}

{% block body %}
    <h1>Fournisseur index</h1>

    <a href="{{ path('app_fournisseur_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEntreprise</th>
                <th>NumeroSiret</th>
                <th>Adresse</th>
                <th>Tel</th>
                <th>Email</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fournisseur in fournisseurs %}
            <tr>
                <td>{{ fournisseur.id }}</td>
                <td>{{ fournisseur.nomEntreprise }}</td>
                <td>{{ fournisseur.numeroSiret }}</td>
                <td>{{ fournisseur.adresse }}</td>
                <td>{{ fournisseur.tel }}</td>
                <td>{{ fournisseur.email }}</td>
                <td>{{ fournisseur.createdAt ? fournisseur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ fournisseur.updatedAt ? fournisseur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ fournisseur.deletedAt ? fournisseur.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_fournisseur_show', {'id': fournisseur.id}) }}">show</a>
                    <a href="{{ path('app_fournisseur_edit', {'id': fournisseur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
