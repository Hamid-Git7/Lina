{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
	<section id="caftan">

        <h1>Locations</h1>
        
        <a class="btn-all" href="{{ path('app_admin_location_new') }}">Créer</a></button>
		<div class="header_fixed mt-4 mb-4">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>DateDebutLocation</th>
                        <th>DateFinLocation</th>
                        <th>Prix Total en €</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for location in locations %}
                    <tr>
                        <td>{{ location.id }}</td>
                        <td>{{ location.dateDebutLocation ? location.dateDebutLocation|date('Y-m-d') : '' }}</td>
                        <td>{{ location.dateFinLocation ? location.dateFinLocation|date('Y-m-d') : '' }}</td>
                        <td>{{ location.prixTotal }}</td>
                        <td>
                            <a class="btn-all" href="{{ path('app_admin_location_show', {'id': location.id}) }}">show</a>
                            <a class="btn-all" href="{{ path('app_admin_location_edit', {'id': location.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation d-flex justify-content-center">
                {{ knp_pagination_render(locations) }}
            </div>
        </div>
    </section>
{% endblock %}
