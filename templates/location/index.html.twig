{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <div class="container mt-4">

        <h1>Locations</h1>
        
    <button type="button" class="btn btn-dark"><a href="{{ path('app_admin_location_new') }}">Create new</a></button>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>DateDebutLocation</th>
                    <th>DateFinLocation</th>
                    <th>Prix Total en â‚¬</th>
                    {# <th>DeletedAt</th> #}
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for location in locations %}
                <tr class="table-success mt-4">
                    <td>{{ location.id }}</td>
                    <td>{{ location.dateDebutLocation ? location.dateDebutLocation|date('Y-m-d') : '' }}</td>
                    <td>{{ location.dateFinLocation ? location.dateFinLocation|date('Y-m-d') : '' }}</td>
                    <td>{{ location.prixTotal }}</td>
                    <td>
                        <a href="{{ path('app_admin_location_show', {'id': location.id}) }}">show</a>
                        <a href="{{ path('app_admin_location_edit', {'id': location.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(locations) }}
        </div>

    </div>
{% endblock %}
