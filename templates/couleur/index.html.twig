{% extends 'base.html.twig' %}

{% block title %}Couleur index{% endblock %}

{% block body %}
    <h1>Couleur index</h1>

    <a href="{{ path('app_couleur_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for couleur in couleurs %}
            <tr>
                <td>{{ couleur.id }}</td>
                <td>{{ couleur.nom }}</td>
                <td>{{ couleur.createdAt ? couleur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ couleur.updatedAt ? couleur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ couleur.deletedAt ? couleur.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_couleur_show', {'id': couleur.id}) }}">show</a>
                    <a href="{{ path('app_couleur_edit', {'id': couleur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
