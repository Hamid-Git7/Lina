{% extends 'base.html.twig' %}

{% block title %}Robe{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Robes</h1>
    <a class="btn-all" href="{{ path('app_admin_robe_new') }}">Create new</a></button>
	<div class="header_fixed mt-4 mb-4">
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom Robe</th>
                    <th>Description</th>
                    <th>Cat√©gotie</th>
                    <th>Prix/jour</th>
                    <th>Fournisseur</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for robe in robes %}
                    <tr>
                        <td>{{ robe.id }}</td>
                        <td>{{ robe.nomRobe }}</td>
                        <td>{{ robe.description }}</td>
                        <td>{{ robe.categorie }}
                        <td>{{ robe.prix }}</td>
                        <td>{{ robe.fournisseur }}</td>
                        <td>
                            <a class="btn-all" href="{{ path('app_admin_robe_show', {'id': robe.id}) }}">show</a>
                            <a class="btn-all" href="{{ path('app_admin_robe_edit', {'id': robe.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="navigation d-flex justify-content-center">
            {{ knp_pagination_render(robes) }}
        </div>
    </div>
</div>

{% endblock %}
