{% extends 'base.html.twig' %}

{% block title %}Robe index{% endblock %}

{% block body %}
    <h1>Robe index</h1>

    <a href="{{ path('app_robe_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom Robe</th>
                <th>Description</th>
                <th>Cat√©gotie</th>
                <th>Prix par jour</th>
                <th>Fournisseur</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for robe in robes %}
            <tr>
                <td>{{ robe.id }}</td>
                <td>{{ robe.nomRobe }}</td>
                <td>{{ robe.description }}</td>
                <td>{{ robe.categorie }}
                <td>{{ robe.prix }}</td>
                <td>{{ robe.fournisseur }}</td>
                <td>{{ robe.createdAt ? robe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ robe.updatedAt ? robe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ robe.deletedAt ? robe.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_robe_show', {'id': robe.id}) }}">show</a>
                    <a href="{{ path('app_robe_edit', {'id': robe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
