{% extends 'base.html.twig' %}

{% block title %}Robe{% endblock %}

{% block body %}
<div class="robe-admin-show">
    <h1>Robe</h1>
    <table class="table d-flex justify-content-center mt-4">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ robe.id }}</td>
            </tr>
            <tr>
                <th>NomRobe</th>
                <td>{{ robe.nomRobe }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ robe.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ robe.prix }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img style="max-width: 500px;" src="{{ vich_uploader_asset(robe, 'imageFile') }}" alt="" ></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_robe_index') }}">back to list</a>

    <a href="{{ path('app_admin_robe_edit', {'id': robe.id}) }}">edit</a>
