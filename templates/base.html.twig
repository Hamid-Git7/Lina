					<li><a href="{{ path('app_admin_couleur_index') }}">Couleur</a></li>
	 			{% else %}
					<li style="margin-right: 350px;"><a href="{{ path('app_client_robe_index') }}" >Nos Robe</a></li>
					{% if app.user %}
					<li><a class="nav-link" href="{{ path('app_location_index') }}">Location</a></li>
					{% endif %}
				{% endif %}

				{% if app.user %}
				<div>
					<span> {{ app.user.userIdentifier }} </span> <a class="btn-reservation" href="{{ path('app_logout') }}">Deconnexion</a>
				</div>
				{% else %}
				<div>
				<a class="btn-reservation" href="{{ path('app_register') }}" style="position: relative; left: 100px">Inscription</a>
				<a class="btn-reservation" href="{{ path('app_login') }}">Connexion</a>
			</div>
			{% endif %}
			</ul>
				
			
			<div class="responsive-menu" id="active">
				<i class='bx bx-menu' id="afficher_menu" style="font-size: 40px; color: #fff; position: relative; left: 15px;"></i>
				<div class="sous_menu">
					<ul class="hover_sous_menu">
						{% if is_granted('ROLE_ADMIN') %}
					<li><a href="{{ path('app_admin_user_index') }}"><i class='bx bx-group'></i> Utilisateur</a></li>
					<li><a href="{{ path('app_admin_client_index') }}"><i class='bx bxs-user-check'></i> Client</a></li>
					<li><a href="{{ path('app_admin_robe_index') }}"><i class='bx bx-closet'></i> Nos Robes</a></li>
					<li><a href="{{ path('app_admin_location_index') }}"><i class='bx bx-location-plus'></i> Location</a></li>
					<li><a href="{{ path('app_admin_fournisseur_index') }}"><i class='bx bxs-truck'></i> Fournisseur</a></li>
					<li><a href="{{ path('app_admin_retoucheur_index') }}"><i class='bx bx-cut'></i> Retoucheur</a></li>
					<li><a href="{{ path('app_admin_retouche_index') }}"><i class='bx bx-cut'></i> Retouche</a></li>
					<li><a href="{{ path('app_admin_categorie_index') }}"><i class='bx bx-list-plus'></i> Categorie</a></li>
					<li><a href="{{ path('app_admin_taille_index') }}"><i class='bx bx-math'></i> Taille</a></li>
					<li><a href="{{ path('app_admin_couleur_index') }}"><i class='bx bxs-palette'></i> Couleur</a></li>
				{% else %}
					<li><a href="{{ path('app_client_robe_index') }}">Nos Robe</a></li>
					<li><a class="nav-link" href="{{ path('app_location_index') }}">Location</a></li>
				{% endif %}
					<ul>
				</div>
			</div>
    	</header>


