        {% block head %}
		<header>
			<div class="logo">
				<a href="{{ path('app_home') }}"> Lina <span>K.</span> Collection </a>
			</div>
			<ul class="menu">
				{% if is_granted('ROLE_ADMIN') %}
					<li><a href="{{ path('app_admin_user_index') }}">Utilisateur</a></li>
					<li><a href="{{ path('app_admin_client_index') }}">Client</a></li>
					<li><a href="{{ path('app_admin_robe_index') }}">Nos Robes</a></li>
					<li><a href="{{ path('app_admin_location_index') }}">Location</a></li>
