{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="login">
    <div class="wrapper">

        <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
            </div>
        {% endif %}

            <h1 class="">Login</h1>
            <div class="input-box">
                <label for="inputEmail"></label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="email" required autofocus>
                <i class='bx bxs-user'></i>
            </div>

            <div class="input-box">
                <label for="inputPassword"></label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="mot de passe" required>
                <i class='bx bxs-lock-alt'></i>
            </div>

            <div class="remember">
                <label>
                    <input type="checkbox" name="_remember_me" >
                    Se souvenir de moi
                </label>
            </div>

            <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn" type="submit">
                Sign in
            </button>

            <div class="register-link">
                <p>Vous n'avez pas de compte? <a href="/créer_un_compte">créer un compte</p>
            </div>
        </form>
    </div>
</div>
{% endblock %}
